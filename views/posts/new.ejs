<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/new-style.css">
    <title>Agatter</title>
</head>
<body>
    <div class="main-container">
        <%- include('../partials/nav.ejs') %>
        <div class="new-post-box">
            <form action="/posts" method="POST">
                <textarea name="content" cols="50" rows="5" placeholder="What's happening?"></textarea><br>
                <input class="submit-btn" type="submit" value="Agatte">
                <a class="cancel-btn" href="/posts">Cancel</a>
            </form>
        </div>
        <div class="posts-wrapper">
            <% posts.forEach(p => { %>
                <div class="content-wrapper">
                    <a href="/posts/<%= p._id %>">
                        <h3><%= p.addedBy.username %></h3>
                        <p><%= p.content %></p>
                    </a>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>